{
  "name": "language-xi",
  "displayName": "Xi markup language",
  "description": "Syntax highlighting and wikiword jumps supoort for Xi markup language",
  "repository": "https://github.com/grigoryvp/vscode-language-xi",
  "icon": "icon.png",
  "version": "1.10.60",
  "publisher": "grigoryvp",
  "license": "SEE LICENSE IN README.md",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xi",
    "onCommand:extension.xi.lookup"
  ],
  "scripts": {
    "vscode:prepublish": "node esbuild.mjs",
    "color-theme": "node --no-warnings ./color_theme_compatibility/display.mjs",
    "test": "npm exec mocha",
    "build": "vsce package --out ./out/extension.vsix",
    "build-pre-release": "vsce package --pre-release --out ./out/extension.vsix",
    "publish": "open-cli https://marketplace.visualstudio.com/manage"
  },
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "files": [
    "./out/extension.js",
    "./src/*.json"
  ],
  "contributes": {
    "languages": [
      {
        "id": "xi",
        "extensions": [
          ".xi"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "xi",
        "scopeName": "text.xi",
        "path": "./src/xi.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "extension.xi.lookup",
        "title": "Xi: Look up a .xi file",
        "when": "!isWeb"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Xi configuration",
      "properties": {
        "xi.lookupPath": {
          "type": "string",
          "default": "~/.xi",
          "description": "Path to a dir with .xi files"
        }
      }
    },
    "keybindings": [
      {
        "command": "extension.xi.lookup",
        "key": "ctrl+k x",
        "mac": "cmd+k x",
        "when": "!isWeb"
      }
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@vscode/vsce": "^2.22.0",
    "chai": "^4.3.10",
    "chalk": "^5.3.0",
    "esbuild": "^0.19.11",
    "mocha": "^10.2.0",
    "open-cli": "^7.2.0"
  },
  "dependencies": {
    "vscode-uri": "^3.0.8"
  }
}
